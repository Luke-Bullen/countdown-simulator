<div class="body">
  <div class="text-center scores">
    <% if @input == '' %>
      <p>Please type an input - <%= link_to "Try Again", root_path %></p>
    <% else %>
      <% if @english_word %>
        <% if @included %>
          <h3>Congratulations!</h3>
          <p>'<%= params[:input].capitalize %>' is a valid word!</p>
          <p>Score: <%= params[:input].length %></p>
        <% else %>
          <h3>Not Quite!</h3>
          <p>'<%= params[:input].upcase %>' can't be built from the provided letters</p>
          <p>'<%= @letters.sort.join(", ") %>'</p>
        <% end %>
      <% else %>
          <h3>Not Quite!</h3>
          <p>'<%= params[:input].capitalize %>' doesn't seem to be a valid English word</p>
      <% end %>
    <% end %>
  </div>

  <div class="text-center reset">
    <%= link_to root_path do %>
      <button type="button" class="btn btn-outline-success">New Game</button>
    <% end %>
  </div>
</div>
